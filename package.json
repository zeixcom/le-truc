{
	"name": "@zeix/le-truc",
	"version": "0.15.0",
	"license": "MIT",
	"author": "Esther Brunner",
	"keywords": [
		"Le Truc",
		"Web Components",
		"Custom Elements",
		"Reactivity",
		"State Management",
		"Signals",
		"Effects"
	],
	"module": "index.ts",
	"type": "module",
	"main": "index.js",
	"types": "types/index.d.ts",
	"scripts": {
		"build:prod": "bun build index.ts --outdir ./ --minify --define process.env.DEV_MODE=false --sourcemap=external",
		"build:dev": "BUN_ENV=development bun build index.dev.ts --outdir ./ --define process.env.DEV_MODE=true",
		"build": "bun run build:prod && bun run build:dev && bunx tsc && bun run lint",
		"build:docs": "bun ./server/build.ts",
		"build:docs:watch": "bun ./server/build.ts --watch",
		"build:examples:js": "bun run build && bun build examples/main.ts --outdir examples/assets --target browser --define process.env.DEV_MODE=true --minify",
		"build:examples:css": "bun build examples/main.css --outdir examples/assets --target browser --minify",
		"build:examples": "bun run build:examples:js && bun run build:examples:css",
		"lint": "bunx biome check --write ./src",
		"lint:examples": "bunx biome check --write ./examples",
		"serve:docs": "bun server/serve.ts --mode docs --build-first",
		"serve:examples": "bun run build:examples && PLAYWRIGHT=1 bun server/serve.ts --no-hmr --no-watch",
		"serve": "bun server/serve.ts --mode unified --build-first",
		"test": "bunx playwright test examples"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@markdoc/markdoc": "^0.5.4",
		"@playwright/test": "^1.57.0",
		"@types/bun": "latest",
		"lightningcss-cli": "^1.30.2",
		"shiki": "^3.19.0",
		"typedoc": "^0.28.15",
		"typedoc-plugin-markdown": "^4.9.0"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@zeix/cause-effect": "^0.16.1"
	}
}
